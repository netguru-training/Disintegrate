= simple_form_for advertisement, html: {multipart: true} do |form|
  = form.input :title
  = form.input :description
  = form.input :address
  = link_to 'Show on the Map', "", onclick: "showMapForm()", remote: true, id: "map_link"
  .show_map#map.small-map
  = form.input :start_date, as: :date
  = form.input :end_date, as: :date
  = form.input :price
  = form.input :number_of_places
  = form.input :hide
  = form.input :photo, as: :file
  = form.input :map_lat, as: :hidden
  = form.input :map_long, as: :hidden
  = link_to t('Back'), advertisements_path, class: 'btn btn-default'
  = form.button :submit